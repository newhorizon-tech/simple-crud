<h1>
  Notes
</h1>

<button type="button" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Tooltip on top">
    Tooltip on top
</button>


<%= render partial: 'form' %>

<ul id="notes-display">
  <% @notes.each do |note| %>
    <li>
      <%= note.title %>
      <%= link_to "edit", edit_note_path(note), :class => 'btn-delete' %>
      <%= button_to "delete", note, :method => :delete, :class => 'btn-delete' %>
    </li>

  <% end %>
</ul>
